@model E_Shop.ViewModel.ProductViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Create Product</title>
    <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }

    h1 {
      text-align: center;
    }

    .form-container {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
    }

    .form-container .form {
      width: 60%;
    }

    .form-group {
      margin-bottom: 10px;
    }

    label {
      font-weight: bold;
    }

    input[type="text"],
    input[type="number"] {
      width: 100%;
      padding: 5px;
    }

    textarea {
      width: 100%;
      padding: 5px;
    }

    .image-container {
      width: 40%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .image-preview {
      max-width: 300px;
      max-height: 300px;
      margin-top: 10px;
    }

    .image-preview img {
      width: 250%;
      height:250%;
      object-fit: cover;
    }

    button[type="submit"] {
      display: block;
      margin: 10px auto;
      padding: 10px 20px;
      font-size: 16px;
    }
  </style>
    <script>
    function showImagePreview(input) {
      var previewContainer = document.querySelector('.image-preview');
      var file = input.files[0];
      var reader = new FileReader();

      reader.onload = function(e) {
        var image = new Image();
        image.src = e.target.result;

        previewContainer.innerHTML = '';
        previewContainer.appendChild(image);
      };

      reader.readAsDataURL(file);
    }
  </script>
</head>
<body>
<h1>Create Product</h1>
<div class="card-body">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row"/>
        <div class="col-md-6"/>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Details" class="control-label"></label>
            <input asp-for="Details" class="form-control"/>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control"/>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="imageFile">Image:</label>
            <input type="file" id="imageFile" name="imageFile" onchange="showImagePreview(this)">
        </div>
        <button type="submit"> Create </button>
    </form>
</div>
<div class="image-container">
    <div class="image-preview"></div>
</div>
</body>
</html>